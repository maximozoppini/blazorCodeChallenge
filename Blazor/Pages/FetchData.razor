@page "/cards"

@using hq_blazor_code_challenge.Interfaces.Card
@using Classes.DTO.Card
@inject ICardService CardService

<h1>Cards</h1>

<p>Cards found in the database</p>

<table class="table">
    <thead>
    <tr>
        <th>Holder</th>
        <th>Number</th>
        <th>Exp Month</th>
        <th>Exp Year</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var card in model.Cards)
    {
        <tr>
            <td>@card.CardHolder</td>
            <td>@card.CardNumber</td>
            <td>@card.CardExpMonth</td>
            <td>@card.CardExpYear</td>
        </tr>
    }
    </tbody>
</table>


@code {
    private CardsDTO model { get; set; } = new CardsDTO();

    protected override async Task OnInitializedAsync()
    {
        model = await CardService.GetCards();
    }
}